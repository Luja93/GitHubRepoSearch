<?xml version="1.0" encoding="UTF-8"?><!-- inset is used to remove borders from bottom/left/right-->
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetBottom="-2dp"
    android:insetLeft="-2dp"
    android:insetRight="-2dp">
    <shape android:id="@+id/rectangle">
        <stroke
            android:width="1dp"
            android:color="@color/textColorSecondary" />
        <corners
            android:topLeftRadius="@dimen/bottom_sheet_default_radius"
            android:topRightRadius="@dimen/bottom_sheet_default_radius" />
        <padding android:top="@dimen/default_padding_medium" />
        <solid android:color="@color/colorPrimary" />
    </shape>
</inset>